<%- include("../../partials/header.ejs") %>
<%- include("../../partials/homenavbar.ejs") %>
<body>
    <br>
    <div class="container">
        <% result.articles.rows.forEach((article) => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%= article.slug %>">Ler Artigo</a>
                </div>
            </div>
        <% }) %>
        <div class="row">
            <div class="col">
                <% if(result.page > 2){%>
                    <a style="float: left" href="/articles/page/<%= result.page - 1 %>">Previus</a>
                <%}else if(result.page === 2){%>
                    <a style="float: left" href="/">Previus</a>
                <%}%>
                <% if(result.next){%>
                <a style="float: right" href="/articles/page/<%= result.page + 1 %>">Next</a>
                <%}%>
            </div>
        </div>
    </div>
</body>
<%- include("../../partials/footer.ejs")%>